---
import { SERVICES } from '../../utils/constants';
import Button from '../ui/Button.astro';
---

<section id="pricing" class="py-20 bg-[var(--color-background-dark)]">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-[var(--color-platinum)]">
      Simple, Transparent Pricing
    </h2>
    <p class="text-center text-[var(--color-platinum)]/70 mb-16 text-lg">
      Choose the plan that fits your needs. All plans include maintenance and hosting.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Starter -->
      <div class="bg-[var(--color-background-dark)] rounded-lg p-8 border border-[var(--color-platinum)]/10">
        <h3 class="text-2xl font-semibold mb-2 text-[var(--color-platinum)]">{SERVICES.STARTER.name}</h3>
        <div class="mb-6">
          <span class="text-5xl font-bold text-[var(--color-platinum)]">
            ${SERVICES.STARTER.priceRange.min}
          </span>
          <span class="text-[var(--color-platinum)]/70"> - ${SERVICES.STARTER.priceRange.max}</span>
        </div>
        <ul class="space-y-4 mb-8">
          {SERVICES.STARTER.features.map((feature) => (
            <li class="flex items-start text-[var(--color-platinum)]/80">
              <i class="fas fa-check-circle text-[var(--color-bondi-blue)] mr-3 mt-1"></i>
              <span>{feature}</span>
            </li>
          ))}
          <li class="flex items-start text-[var(--color-platinum)]/80">
            <i class="fas fa-check-circle text-[var(--color-bondi-blue)] mr-3 mt-1"></i>
            <span>Maintenance included</span>
          </li>
        </ul>
        <Button href="/orcamento?plan=starter" variant="outline" class="w-full">Choose Starter</Button>
      </div>

      <!-- Business -->
      <div class="bg-gradient-to-br from-[var(--color-indigo-velvet)]/30 to-[var(--color-bondi-blue)]/20 rounded-lg p-8 border-2 border-[var(--color-indigo-velvet)]/50 relative">
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-[var(--color-indigo-velvet)] text-white px-4 py-1 rounded-full text-sm font-semibold">
          Most Popular
        </div>
        <h3 class="text-2xl font-semibold mb-2 text-[var(--color-platinum)]">{SERVICES.BUSINESS.name}</h3>
        <div class="mb-6">
          <span class="text-5xl font-bold text-[var(--color-platinum)]">
            ${SERVICES.BUSINESS.priceRange.min}
          </span>
          <span class="text-[var(--color-platinum)]/70"> - ${SERVICES.BUSINESS.priceRange.max}</span>
        </div>
        <ul class="space-y-4 mb-8">
          {SERVICES.BUSINESS.features.map((feature) => (
            <li class="flex items-start text-[var(--color-platinum)]/80">
              <i class="fas fa-check-circle text-[var(--color-bondi-blue)] mr-3 mt-1"></i>
              <span>{feature}</span>
            </li>
          ))}
          <li class="flex items-start text-[var(--color-platinum)]/80">
            <i class="fas fa-check-circle text-[var(--color-bondi-blue)] mr-3 mt-1"></i>
            <span>Maintenance included</span>
          </li>
        </ul>
        <Button href="/orcamento?plan=business" variant="primary" class="w-full">Choose Business</Button>
      </div>
    </div>
    <div class="mt-12 text-center">
      <p class="text-[var(--color-platinum)]/70 mb-4">
        All plans include hosting and maintenance starting at ${SERVICES.MAINTENANCE.priceRange.min}/month
      </p>
      <p class="text-sm text-[var(--color-platinum)]/50">
        Minimum 1-year contract required for maintenance
      </p>
    </div>
  </div>
</section>
