---
import { PROCESS_STEPS } from '../../utils/constants';
---

<section id="process" class="py-20 bg-[var(--color-background)]">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-[var(--color-platinum)]">
      Our Simple Process
    </h2>
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {PROCESS_STEPS.map((step, index) => (
          <div class={`relative ${index % 2 === 0 ? 'md:bg-[var(--color-background)]' : 'bg-[var(--color-background-dark)]'} rounded-lg p-6 border border-[var(--color-platinum)]/10 hover:border-[var(--color-indigo-velvet)]/50 transition-all`}>
            <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-[var(--color-indigo-velvet)] to-[var(--color-bondi-blue)] flex items-center justify-center text-white font-bold text-xl shadow-lg">
              {step.number}
            </div>
            <h3 class="text-xl font-semibold mb-3 mt-4 text-[var(--color-platinum)]">{step.title}</h3>
            <p class="text-[var(--color-platinum)]/70">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
    <div class="mt-16 text-center">
      <p class="text-lg text-[var(--color-platinum)]/80">
        We'll review your project and get back to you within <span class="font-semibold text-[var(--color-bondi-blue)]">24 hours</span>
      </p>
    </div>
  </div>
</section>
