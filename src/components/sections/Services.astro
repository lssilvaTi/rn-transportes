---
import { SERVICES } from '../../utils/constants';
---

<section id="services" class="relative py-12 md:py-20 lg:py-24 bg-[var(--color-background)]">
  <div class="section-shapes absolute inset-0 pointer-events-none hidden md:block z-0" aria-hidden="true">
    <div class="absolute left-[2%] top-[18%] w-7 h-7 bg-[var(--color-yellow)] opacity-60 rotate-12"></div>
    <div class="absolute left-[1.5%] bottom-[22%] w-6 h-10 bg-[var(--color-cyan)] opacity-55 -rotate-6"></div>
    <div class="absolute right-[2%] top-[28%] w-6 h-6 bg-[var(--color-cyan)] opacity-60 -rotate-12"></div>
    <div class="absolute right-[1.5%] bottom-[18%] w-8 h-6 bg-[var(--color-yellow)] opacity-65 rotate-6"></div>
  </div>
  <div class="container relative z-10 mx-auto px-6">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-4 text-[var(--color-dark-blue)]">
      Nossos Serviços
    </h2>
    <p class="text-center text-[var(--color-cyan)] mb-10 md:mb-16 text-lg md:text-xl max-w-2xl mx-auto font-medium">
      Como podemos te ajudar?
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 md:gap-8 lg:gap-10 max-w-5xl mx-auto">
      {SERVICES.map((service) => (
        <div class="flex flex-col items-center text-center p-6 md:p-8 bg-[var(--color-background-dark)] rounded-lg border border-[var(--color-platinum)]/20 hover:border-[var(--color-cyan)]/40 transition-all duration-300">
          <!-- Ícone em quadrado amarelo (estilo da referência) -->
          <div class="w-16 h-16 mb-4 md:mb-6 rounded-sm bg-[var(--color-yellow)] flex items-center justify-center flex-shrink-0">
            <i class={`fas ${service.icon} text-2xl text-[var(--color-dark-blue)]`}></i>
          </div>
          <h3 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-[var(--color-cyan)]">
            {service.title}
          </h3>
          <p class="text-[var(--color-platinum)]/80 leading-relaxed max-w-md">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
