---
interface Props {
  variant?: 'full' | 'full-dark' | 'full-light' | 'wordmark-dark' | 'wordmark-light' | 'mono-dark' | 'mono-light';
  class?: string;
}

const { variant = 'full', class: className = '' } = Astro.props;

const logoMap = {
  full: '/assets/logos/logo-full-light.png',
  'full-dark': '/assets/logos/logo-full-dark.png',
  'full-light': '/assets/logos/logo-full-light.png',
  'wordmark-dark': '/assets/logos/wordmark-dark.png',
  'wordmark-light': '/assets/logos/wordmark-light.png',
  'mono-dark': '/assets/logos/logo-mono-dark.png',
  'mono-light': '/assets/logos/logo-mono-light.png',
};

const logoPath = logoMap[variant];
---

<img 
  src={logoPath} 
  alt="Axory Studio" 
  class={`h-8 ${className}`}
/>
